@model IEnumerable<mvc12122024.Models.RegistrationJoin>

    @{
        ViewBag.Title = "ShowUser";
    }


    <h2>ShowUserForm</h2>

    <table id="tbl" class="styled-table">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Country</th>
            <th>State</th>
            <th>Gender</th>
            <th>Hobbies</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.rid</td>
                <td>@x.rname</td>
                <td>@x.remail</td>
                <td>@x.rpassword</td>
                <td>@x.rcountry</td>
                <td>@x.rstate</td>
                <td>@x.rgender</td>
                <td>@x.rhobbies</td>
                <td>@Html.ActionLink("Delete", "DeleteUser", new { A = x.rid })</td>
                <td>@Html.ActionLink("Edit", "AddUser", new { A = x.rid })</td>
            </tr>
        }
    </table>

    <style>
        /* General Form Styling */

        table {
            margin: 20px auto;
            border-collapse: separate;
            border-spacing: 10px;
            width: 60%;
            background-color: #1e1e2f;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
            border-radius: 10px;
            font-family: Arial, sans-serif;
            color: #ffffff;
        }

            table td {
                font-size: 16px;
                color: #ffffff;
                padding: 8px;
                text-align: left;
                vertical-align: middle;
                width: 50%;
            }

        /* Input and Select Styling */
        input[type="text"], select {
            width: calc(100% - 20px);
            padding: 10px;
            font-size: 14px;
            color: #ffffff;
            background-color: #2a2a3c;
            border: 1px solid #44475a;
            border-radius: 5px;
            box-sizing: border-box;
            transition: all 0.3s ease-in-out;
        }

            input[type="text"]:focus, select:focus {
                border-color: #6272a4;
                box-shadow: 0 0 5px rgba(98, 114, 164, 0.5);
                outline: none;
            }

        /* Button Styling */
        input[type="button"] {
            background-color: #50fa7b;
            color: #000;
            padding: 10px 20px;
            font-size: 14px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            width: 100%;
        }

            input[type="button"]:hover {
                background-color: #45e06f;
            }

        /* Placeholder Styling */
        ::placeholder {
            color: #bbbbbb;
        }

        /* Table Borders */
        table td, table th {
            border-bottom: 1px solid #44475a;
        }
    </style>




